<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mega Desk LLC</title>
    <link rel="stylesheet" href="css/site.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @*<link rel="stylesheet" href="https://rus19023.github.io/myportfolio/css/megadesk.css" />*@
    @*<link rel="stylesheet" href="http://127.0.0.1:5501/css/megadesk.css" />*@ 
    <link rel="shortcut icon" href="/img/favicon.ico">
     
</head>
<body>
    <header>
        <nav class="">
            <div class="navcontainer">
                <h1><a class="title" asp-area="" asp-page="/Index">Mega Desk LLC</a></h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="">
                            <a class="navlink" asp-area="" asp-page="/Index"></a>
                        </li>
                        <li>
                            <a class="navlink" asp-area="" asp-page="/Pages/DeskQuotes/Index">View Quotes</a>
                         </li>
                        <li class="">
                            <a class="navlink" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2022 - Mega Desk LLC - <a asp-area="" asp-page="/Privacy"> Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
