@model IEnumerable<SacramentMeetingPlanner.Models.Meeting>

@{
    ViewData["Title"] = "Meetings List";
}

<p>
    <a class="btn btn-add" asp-action="Create">Add Meeting</a>
</p>

<div class="flex flex-row">    
        <div class="">
            <div class="headings h6 ">
                @Html.DisplayNameFor(model => model.MeetingDate)
            </div>
            <div class="headings h6 ">
                @Html.DisplayNameFor(model => model.OpeningHymn)
            </div>
            <div class="headings h6 ">
                @Html.DisplayNameFor(model => model.SacramentHymn)
            </div>
            <div class="headings h6 ">
                @Html.DisplayNameFor(model => model.ClosingHymn)
            </div>
            <div class="headings h6 ">
                @Html.DisplayNameFor(model => model.IntermediateNumber)
            </div>
            <div class="headings h6 ">
                @Html.DisplayNameFor(model => model.Member)
            </div>
            <div class="headings h6 "></div>
        </div>
    
    
@foreach (var item in Model) {
        <div class="row">
            <div class="h6">
                @Html.DisplayFor(modelItem => item.MeetingDate)
            </div>
            <div class="h6">
                @Html.DisplayFor(modelItem => item.OpeningHymn)
            </div>
            <div class="h6">
                @Html.DisplayFor(modelItem => item.SacramentHymn)
            </div>
            <div class="h6">
                @Html.DisplayFor(modelItem => item.ClosingHymn)
            </div>
            <div class="h6">
                @Html.DisplayFor(modelItem => item.IntermediateNumber)
            </div>
            <div class="h6">
                @Html.DisplayFor(modelItem => item.Member.FirstName)
            </div>
            <div class="h6">
                <a class="btn btn-list" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-list" asp-action="Details" asp-route-id="@item.ID">Details</a>
                <a class="btn btn-list" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </div>
        </div>
}
    
</div>


