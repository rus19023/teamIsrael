<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sacrament Meeting Planner</title>
     <link rel="stylesheet" href="~/css/output.css"/>
    <link rel="shortcut icon" href="/img/favicon.ico">
</head>
<body class="regular">
    <header>
        <div class="min-h-screen p-10 pt-32 h-100">
            <nav class="navbar">
                <div class="regular">
                    <a class="header h1 link" asp-area="" asp-controller="Home" asp-action="Index">SacramentMeetingPlanner</a>
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar">
                            <li class="">
                                <a class="btn btn-nav" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="">
                                <a class="btn btn-nav" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
         </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <h1 class="header h1">@ViewData["Title"] </h1>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Sacrament Meeting Planner - BYU-I, Spring 2022, Section 02, Team Israel <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
