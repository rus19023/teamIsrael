@model IEnumerable<SacramentMeetingPlanner.Models.Member>

@{
    ViewData["Title"] = "Member List";
}
<p>
    <a class="btn btn-add" asp-action="Create">Add Member</a>
</p>

<div class="div">
    
        <div class="row">
            <div class="col">
                @Html.DisplayNameFor(model => model.FirstName)
            </div>
            <div class="col">
                @Html.DisplayNameFor(model => model.LastName)
            </div>
            <div class="col"></div>
        </div>
    
    
@foreach (var item in Model) {
        <div class="row">
            <div class="col">
                @Html.DisplayFor(modelItem => item.FirstName)
            </div>
            <div class="col">
                @Html.DisplayFor(modelItem => item.LastName)
            </div>
            <div class="col h6">
                <a class="btn btn-open" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a class="btn btn-open" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-open" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </div>
        </div>
}
    
</div>

